<div class="container">
	<div class="row">
		<div class="col-md-3">
	 	    <h3>Filters by city, salary, technologies</h3>
			
	 	</div>

	    <div class="col-md-8">
			<h1>Candidates</h1>
	  		<% @candidates.each do |candidate| %>
	  		    <div class="panel panel-default">
			     <div class="panel-heading">
			        <div class="panel-title">
			        	<%= link_to candidate.name, '#' %> <span class="pull-right salary"><%= candidate.salary %>$</span>
			        </div>
			      </div>
			      <div class="panel-body">
			      	<div class="row">
			        	<div class="col-md-4"><strong>Category:</strong> <%= candidate.category %></div>
			        	<div class="col-md-4 col-md-offset-4"><strong>City:</strong> <%= candidate.city %></div>
			        </div>
			      <hr>
			      <p><h4><strong>About</strong></h4></p>
			      <p><%= truncate(candidate.experience, :length => 50, :separator => ' ') %></p>
			      <hr>
			        <div class="row">
			          <div class="col-md-4">
			          	<div class="btn btn-default">Show profile</div>
			          </div>
			        </div>
			      </div>
			    </div>
	  		<% end %>

	  		<div class="text-center">
	  		</div>

	 	</div>
	</div>
</div>